{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "framework": "vite",
  "github": {
    "silent": true
  },
  "trailingSlash": false,
  "env": {
    "VITE_API_URL": "https://stablebank-api.vercel.app/api",
    "VITE_SOLANA_NETWORK": "devnet"
  }
}

